@using MySportsClubManager.Web.ViewModels.ApplicationUser
@model LoginViewModel
@{
    <p class="text-center h1 fw-bold m-3">Login</p>
    <form method="post" asp-action="Login" class="mx-1 mx-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.RreturnUrl" />
        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <label asp-for="@Model.UserName">UserName</label>
                <input type="text" id="form3Example1c" class="form-control" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <label asp-for="@Model.Password">Password</label>
                <input type="password" id="form3Example4c" class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="submit" class="btn btn-primary btn-lg">Log in</button>
        </div>

    </form>
}
