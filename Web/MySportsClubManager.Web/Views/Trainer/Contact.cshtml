@model ContactTrainerInputModel
@{
    <div class="container h-100 my-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; border-width: medium">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-4">
                                <div class="card text-white bg-secondary">
                                    <div class="card-body text-dark">
                                        <h3>Trainer's info</h3>
                                        <img class="rounded-circle" src="@Model.ImageUrl" alt="trainer" style="width: 50px; height: 50px" />
                                        <h5 class="mt-1">First name: <strong>@Model.FirstName</strong></h5>
                                        <h5>Last name:    <strong>@Model.LastName</strong></h5>
                                        <h5>Email: <strong>@Model.TrainerEmail</strong></h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8 text-center">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Contact trainer</p>

                                <form method="post" asp-action="Contact" class="mx-1 mx-md-4">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="d-flex flex-row align-items-center mb-4 text-start">
                                        <i class="fa-solid fa-comment fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="topic">Topic</label>
                                            <input type="text" id="topic" class="form-control" asp-for="@Model.Topic" />
                                            <span asp-validation-for="@Model.Topic" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4 text-start">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="emailSender">Your email</label>
                                            <input type="text" id="emailSender" class="form-control" asp-for="@Model.SenderEmail" />
                                            <span asp-validation-for="@Model.SenderEmail" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4 text-start">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="emailTrainer">Trainer's email</label>
                                            <input type="text" id="emailTrainer" class="form-control" asp-for="@Model.TrainerEmail" />
                                            <span asp-validation-for="@Model.TrainerEmail" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4 text-start">
                                        <i class="fa-solid fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="emailText">Email</label>
                                            <textarea type="text" rows="10" id="emailText" class="form-control" asp-for="@Model.EmailText"></textarea>
                                            <span asp-validation-for="@Model.EmailText" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Send Email</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
